
<div class="quote">
  <%= link_to product.name, edit_product_path(product) %>
  <%= product.code %>

  <div class="quote__actions">
    <%= button_to "Delete",
                  product_path(product),
                  method: :delete,
                  class: "btn btn--light" %>

    <%= link_to "Edit",
                edit_product_path(product),
                class: "btn btn--light" %>
  </div>
</div>
