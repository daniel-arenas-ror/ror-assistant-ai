<%= simple_form_for real_estate, html: { class: "real_estate form" } do |f| %>
  <%= form_error_notification(real_estate) %>

  <%= f.input :name, input_html: { autofocus: true } %>
  <%= f.input :code, input_html: { autofocus: true } %>
  <%= f.input :url, input_html: { autofocus: true } %>
  <%= f.input :description, input_html: { autofocus: true } %>
  <%= f.input :amenities, input_html: { autofocus: true } %>
  <%= f.input :location, input_html: { autofocus: true } %>
  <%= f.input :price, input_html: { autofocus: true } %>


  <%= link_to "Cancel", quotes_path, class: "btn btn--light" %>
  <% if !real_estate.new_record? %>
    <%= link_to "Scrape Data",
        scrape_real_estate_path(@real_estate),
        data: { turbo_method: :patch, turbo_confirm: "Run scraper?" },
        class: "btn btn-warning"
    %>
  <% end %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>